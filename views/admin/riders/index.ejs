                      <a class="nav-link text-danger" data-bs-toggle="tab" href="#delete" role="tab">Deleted Riders</a>
                    </li>
                  </ul>
                  <!-- end nav tabs -->
                </div>
              </div>
              <!-- end card header -->

              <div class="card-body px-0">
