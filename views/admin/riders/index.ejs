                      <div class="row">
                        <div class="col-12">
                          <div class="card">
                            <div class="card-body">
                              <table id="" class="table table-bordered dt-responsive  nowrap w-100">
                                <thead>
                                  <tr>
                                    <th>S/N</th>
                                    <th>Full Name</th>
                                    <th>Number of Trips</th>
                                    <th>Destination</th>
                                    <!-- <th>Actions</th> -->
                                  </tr>
                                </thead>
                                <tbody>
                                  <% onlineRiders.forEach(function(user) { %>
                                  <tr>
                                    <td>
                                      <%= sn++ %>
                                    </td>
                                    <td><b><a href="/view-rider/<%= user.id %>"><%= user.name %></a></b></td>
                                    <td>
                                      <%= user.trips %>
                                    </td>
                                    <td>
                                      <%= user.destination %>
                                    </td>
                                    <!-- <td>
                                      <a href="/view-rider/<%= user.id %>" class="btn btn-soft-success waves-effect waves-light" title="View" data-bs-toggle="tooltip" data-bs-placement="top"><i class="fa fa-eye font-size-16 align-middle"></i></a>
                                      <a href="/edit-rider/<%= user.id %>" class="btn btn-soft-success waves-effect waves-light" title="Edit" data-bs-toggle="tooltip" data-bs-placement="top"><i class="fa fa-edit font-size-16 align-middle"></i></a>
                                      <a href="/rider-status/<%= user.id %>/0" onclick="return confirm('Are you sure you want to Block this Rider?')" title="Block" data-bs-toggle="tooltip" data-bs-placement="top" class="btn btn-soft-danger waves-effect waves-light"><i class="fa fa-lock font-size-16 align-middle"></i></a>
                                      <a href="/rider-status/<%= user.id %>/2" onclick="return confirm('Are you sure you want to Delete this Rider?')" title="Delete" data-bs-toggle="tooltip" data-bs-placement="top" class="btn btn-soft-danger waves-effect waves-light"><i class="fa fa-trash font-size-16 align-middle"></i></a>
                                    </td> -->
                                  </tr>
                                  <% }); %>
                                </tbody>
                              </table>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="tab-pane" id="pending" role="tabpanel">
