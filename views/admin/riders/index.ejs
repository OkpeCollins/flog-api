                                      <a href="/rider-status/<%= user.id %>/2" onclick="return confirm('Are you sure you want to Delete this Rider?')" title="Delete" data-bs-toggle="tooltip" data-bs-placement="top" class="btn btn-soft-danger waves-effect waves-light"><i class="fa fa-trash font-size-16 align-middle"></i></a>
                                    </td>
                                  </tr>
                                  <% }); %>
                                </tbody>
                              </table>
                            </div>
                          </div>
                        </div>
                      </div>
